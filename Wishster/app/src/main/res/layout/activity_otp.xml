<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OtpActivity"
    android:background="@drawable/default_back"
    android:id="@+id/main_container"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:text="Enter the email or mobile no. to proceed."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextLabel2">

            <EditText
                android:imeOptions="actionSend"
                android:id="@+id/et_phn_or_email"
                android:drawableRight="@drawable/ic_mail"
                android:hint="Enter your email or phone no."
                android:drawablePadding="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <Button
        android:id="@+id/send_otp"
        android:background="@drawable/rounded_corner_bg"
        android:text="Send OTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/card_view"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <TextView
        android:textSize="23sp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/card_view"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"/>
    <ImageView
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wishter_logo"/>
</RelativeLayout>