<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyTextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <!--The size of the text appear on label in false state -->
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>
<style name="MyTextLabel2" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#3399ff</item>
        <!--The size of the text appear on label in false state -->
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#3399ff</item>
        <item name="colorControlNormal">#3399ff</item>
        <item name="colorControlActivated">#3399ff</item>
    </style>
    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#3399ff</item>
        <item name="colorControlActivated">#3399ff</item>
        <item name="colorControlHighlight">#3399ff</item>
    </style>


</resources>
